    "mcp:inspector": "cd mcp-server && CLIENT_PORT=5173 SERVER_PORT=3003 npx @modelcontextprotocol/inspector -e MCP_PORT=3002 -- node /home/rozar/Documents/charisma/op_predict/mcp-server/dist/index.js",
    "dev:all": "pnpm mcp:kill && pnpm mcp:build && concurrently \"pnpm dev\" \"pnpm mcp:inspector\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
